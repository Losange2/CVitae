{% extends 'template.html.twig' %}

{% block title %}Cv index{% endblock %}

{% block body %}
    <h1>Cv index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            {% if cv.getLeClient() == app.user %}
            <tr>
                <td>{{ cv.id }}</td>
                <td>{{ cv.Titre }}</td>
                <td>
                    <a href="{{ path('app_cv_show', {'id': cv.id}) }}">show</a>
                    <a href="{{ path('app_cv_edit', {'id': cv.id}) }}">edit</a>
                </td>
            </tr>
        {% endif %}
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <button class="btn" onclick="location.href='{{ path('app_creer') }}'" style="text-align: center;" >Create new</button>
{% endblock %}
