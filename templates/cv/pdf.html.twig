<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <h1> {{ cv.leClient.prenom }} {{ cv.leClient.nom }} </h1>
    <p>{{ cv.leClient.email }}</p>
    <p>{{ cv.leClient.telephone }}</p>
    <p>{{ cv.leClient.adresse }}</p>
    <p>{{ cv.leClient.getDateDeNaissance()|date('d/m/Y') }}</p>
    <title>{{ cv.Titre }}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            color: #282727;
        }
        h1 {
            color: #18385e;
            text-align: center;
            margin-bottom: 30px;
        }
        .category {
            margin-bottom: 25px;
            page-break-inside: avoid;
        }
        .category h2 {
            background: #fe6522;
            color: white;
            padding: 10px;
            margin: 0;
            font-size: 18px;
        }
        .category ul {
            list-style: none;
            padding: 0;
            margin: 10px 0;
        }
        .category li {
            padding: 8px 15px;
            margin: 5px 0;
            background: #f5f5f5;
            border-left: 3px solid #18385e;
        }
    </style>
</head>
<body>
    <h1>{{ cv.Titre }}</h1>
    
    {% set categories = {} %}
    {% for point in cv.getLesPoints() %}
        {% set cateId = 'cat_' ~ point.getLaCate().id %}
        {% set cateName = point.getLaCate().libelle %}
        {% if categories[cateId] is not defined %}
            {% set categories = categories|merge({(cateId): {name: cateName, points: []}}) %}
        {% endif %}
        {% set categories = categories|merge({(cateId): {name: cateName, points: categories[cateId].points|merge([point])}}) %}
    {% endfor %}
    
    {% for cateId, category in categories %}
        <div class="category">
            <h2>{{ category.name }}</h2>
            <ul>
                {% for point in category.points %}
                    <li>{{ point.libelle }}</li>
                {% endfor %}
            </ul>
        </div>
    {% endfor %}
</body>
</html>
