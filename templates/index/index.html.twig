{% extends 'template.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('/css/index.css') }}">
{% endblock %}
{% block title %}Hello IndexController!{% endblock %}
{% block header %}

{% endblock %}
{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    
</div>

<div class="example-wrapper">
{% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <h1>Bonjour {{ app.user.prenom }} {{ app.user.nom }}</h1>
    <h2>Voici la liste de vos CVs :</h2>
    {% for cv in cvs %}
        {% if cv.getLeClient() == app.user %}
            <li>{{ cv.titre }}</li>
        {% endif %}
    {% endfor %}
<a href="{{ path('app_creer') }}">Créer un nouveau CV</a>
{% endif %}
{% if not is_granted('IS_AUTHENTICATED_FULLY') %}
    <h1>Bienvenue sur CVitae</h1>
    <p>CVitae est une application web qui vous permet de créer et gérer vos CV en ligne facilement.</p>
    <p>Vous voulez creer un CV ? <a href="{{ path('app_register') }}">Cliquez ici</a>.</p>
{% endif %}

</div>

{% endblock %}
