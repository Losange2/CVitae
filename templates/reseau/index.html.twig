{% extends 'base.html.twig' %}

{% block title %}Reseau index{% endblock %}

{% block body %}
    <h1>Reseau index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Lien</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reseau in reseaus %}
            <tr>
                <td>{{ reseau.id }}</td>
                <td>{{ reseau.lien }}</td>
                <td>
                    <a href="{{ path('app_reseau_show', {'id': reseau.id}) }}">show</a>
                    <a href="{{ path('app_reseau_edit', {'id': reseau.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reseau_new') }}">Create new</a>
{% endblock %}
